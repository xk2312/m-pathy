{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,               // -> false, falls keine .js-Dateien im Repo
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler", // Next.js 14 Empfehlung
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/app/*": ["app/*"],
      "@/components/*": ["app/components/*"],
      "@/modules/*": ["app/modules/*"],
      "@/lib/*": ["lib/*", "src/lib/*"],   // <-- FIX: zuerst lib/*
      "@/styles/*": ["styles/*"],
      "@/public/*": ["public/*"]
    },
    "incremental": true,
    "plugins": [{ "name": "next" }]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
